    	<label id="longest_mid_throw" x="center" y="60" text="@Strings.best_mid_label" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    	<label id="longest_putt" x="center" y="120" text="@Strings.best_putt_label" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER" />
	</layout>
	
	<layout id="MeasureLayout">
